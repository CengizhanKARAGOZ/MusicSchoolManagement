{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=MusicSchoolDb;User=root;Password=YOUR_PASSWORD_HERE;"
  },
  "JwtSettings": {
    "Secret": "YOUR_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG_FOR_SECURITY",
    "Issuer": "MusicSchoolAPI",
    "Audience": "MusicSchoolClient",
    "ExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 7
  },
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SenderEmail": "noreply@musicschool.com",
    "SenderName": "Music School",
    "Username": "YOUR_EMAIL@gmail.com",
    "Password": "YOUR_APP_PASSWORD"
  },
  "SmsSettings": {
    "Provider": "Netgsm",
    "ApiUrl": "https://api.netgsm.com.tr",
    "Username": "YOUR_USERNAME",
    "Password": "YOUR_PASSWORD",
    "Header": "MUSICSCHL"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "AllowedHosts": "*"
}