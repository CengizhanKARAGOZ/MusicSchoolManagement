# Build Stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy csproj files and restore dependencies
COPY ["MusicSchoolManagement.API/MusicSchoolManagement.API.csproj", "MusicSchoolManagement.API/"]
COPY ["MusicSchoolManagement.Business/MusicSchoolManagement.Business.csproj", "MusicSchoolManagement.Business/"]
COPY ["MusicSchoolManagement.Core/MusicSchoolManagement.Core.csproj", "MusicSchoolManagement.Core/"]
COPY ["MusicSchoolManagement.Infrastructure/MusicSchoolManagement.Infrastructure.csproj", "MusicSchoolManagement.Infrastructure/"]

RUN dotnet restore "MusicSchoolManagement.API/MusicSchoolManagement.API.csproj"

# Copy everything else and build
COPY . .
WORKDIR "/src/MusicSchoolManagement.API"
RUN dotnet build "MusicSchoolManagement.API.csproj" -c Release -o /app/build

# Publish Stage
FROM build AS publish
RUN dotnet publish "MusicSchoolManagement.API.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Runtime Stage
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app

# Expose ports
EXPOSE 8080
EXPOSE 8081

# Copy published files
COPY --from=publish /app/publish .

# Set environment variable for HTTP port
ENV ASPNETCORE_URLS=http://+:8080

# Run the application
ENTRYPOINT ["dotnet", "MusicSchoolManagement.API.dll"]